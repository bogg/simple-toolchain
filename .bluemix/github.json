{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "properties": {
       "url_test": {
            "title": "Container url",
            "type": "string"
       },
       "repo_name": {
            "title": "New repository name",
            "type": "string"
        },
        "repo_url": {
            "title": "Source repository URL",
            "description": "Type the URL of the repository that you are forking, cloning, or linking to.",
            "type": "string"
        },
        "type": {
            "title": "Repository type",
            "type": "string",
            "enum": [
                "new",
                "fork",
                "clone",
                "link"
            ]
        },
        "has_issues": {
            "title": "Enable GitHub Issues",
            "description": "Select this check box to enable GitHub Issues for lightweight issue tracking.",
            "type": "boolean",
            "default": true
        },
        "enable_traceability": {
            "title": "Track deployment of code changes",
            "description": "Select this check box to track the deployment of code changes by creating tags, labels and comments on commits, pull requests and referenced issues.",
            "type": "boolean",
            "default": false
        }
    },
  "form": [{
      "type": "validator",
      "url": "devops/setup/bm-helper/github_helper.html"
  }, {
          "type": "text",
          "readonly": false,
          "title": "App name",
          "key": "url_test",
           "darklaunch": "orionlsp",
        },
           { "key": "enable_traceability",
             "visible": false
           },
           {
            "type": "table",
            "columnCount": 2,
            "widths": [
                "90%",
                "10%"
            ],
            "items": [


           {
                        "type": "selectfieldset",
                        "key": "type",
                        "titleMap": {
                            "new": "New",
                            "fork": "Fork",
                            "link": "Existing",
                            "clone": "Clone"
                        },
                        "items": [

                            {
                                "type": "section",
                                "description": "Create an empty repository.",
                                "items": [
                                    "repo_name",
                                    "has_issues"
                                ]
                            }, {
                                "type": "section",
                                "darklaunch": "gitfork",
                                "description": "Fork the repository that is specified in the Source repository URL field.",
                                "items": [
                                    {
                                      "type": "select",
                                      "key": "repo_url",
                                      "readonly": false
                                    }
                                ]
                            }, {
                                "type": "section",
                                "description": "Clone the repository that is specified in the Source repository URL field.",
                                "items": [
                                    "repo_name",
                                    {
                                      "type": "select",
                                      "key": "repo_url",
                                      "readonly": false
                                    },
                                    "has_issues"
                                ]
                            }, {
                                "type": "section",
                                "description": "Link to the repository that is specified in the Source repository URL field.",
                                "items": [
                                    {
                                      "type": "select",
                                      "key": "repo_url",
                                      "readonly": false
                                    },
                                    "has_issues"
                                ]
                            }
                        ]
                    },
                    { 
                      “type”: “link”,
                      “label”: “Manage Server”,
                      “url”: “https://www.google.com/”
                    }
                    ]}

                    ]
}
